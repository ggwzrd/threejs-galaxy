{
  "compilerOptions": {
    "target": "es2015",
    "declaration": true,
    "stripInternal": true,

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "threejs-mouse-tracker": ["src/index.ts"]
    },

    "rootDirs": [
      "src"
    ],

    "sourceRoot": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,

    "experimentalDecorators": true,
    "declarationDir": "./src/types"
  },
  "include": ["src"],
  "typedocOptions": {
    "out": "./docs",
    "toc": false,
    "excludePrivate": true,
    "includes": "./src",
    "target": "ES6",
    "theme": "default",
    "name": "True Myth"
  }
}